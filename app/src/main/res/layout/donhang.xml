<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">
<ScrollView
    android:id="@+id/scrollView"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_151"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:background="@drawable/header_register"
                    android:scrollbars="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:text="Khách hàng: Phạm Xuân Tuấn"
                        android:textColor="#F6F5F8" />
                </androidx.appcompat.widget.Toolbar>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:scrollbars="vertical"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:scrollbars="vertical"
                    android:weightSum="3">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/purple_500"
                        android:text="Lịch Sử Giao Dịch Khách Hàng"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <ListView
            android:id="@+id/listview_151"
            android:layout_width="match_parent"
            android:layout_height="560dp"></ListView>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnback_151"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trở Lại Trang Chủ" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>